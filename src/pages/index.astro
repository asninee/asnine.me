---
import Link from '@components/Link.astro'
import NoteList from '@components/NoteList.astro'
import PostList from '@components/PostList.astro'
import ProjectList from '@components/ProjectList.astro'
import Base from '@layouts/Base.astro'
import { getNotesLength } from '@lib/notes'
import { getPostsLength } from '@lib/posts'

const [postsLength, notesLength] = await Promise.all([
  getPostsLength(),
  getNotesLength(),
])

const title = 'home â€¢ asnine'
---

<Base
  {title}
  description='my personal site and blog'
  class='flex flex-col gap-8 md:gap-12'
>
  <section>
    <small class='text-sec'>about</small>
    <p class='mt-3'>
      Driven towards building out simple, functional and elegant applications.
      Currently working at <Link href='https://www.evelyn.com'
        >Evelyn Partners</Link
      >. Love exploring the latest and greatest in the tech sphere, where I
      value high-quality products that are utilitarian in nature, but also
      incorporate a sleek aesthetic.
    </p>
  </section>

  <section>
    <small class='text-sec'>Projects</small>
    <ProjectList class='mt-2' />
  </section>

  <section>
    <div class='flex items-center'>
      <Link alternate noUnderline lg href='/blog'
        ><small class='text-sec'
          >Blog<sup class='m-0.5'>{postsLength}</sup></small
        ></Link
      >
    </div>
    <PostList />
  </section>

  <section>
    <div class='flex items-center'>
      <Link alternate noUnderline lg href='/notepad'
        ><small class='text-sec'
          >Notepad<sup class='m-0.5'>{notesLength}</sup></small
        ></Link
      >
    </div>
    <NoteList class='mt-3' />
  </section>
</Base>
