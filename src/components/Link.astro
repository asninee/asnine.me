---
import { twMerge } from 'tailwind-merge'

const { href, lg, xl, img, alternate, filled, noUnderline, label, ...props } =
  Astro.props

const isExternal = href.startsWith('http')
---

<a
  href={href}
  target={isExternal ? '_blank' : '_self'}
  aria-label={label}
  class={twMerge(
    'p-1 -mx-1',
    alternate &&
      'relative before:content-[""] before:absolute before:inset-0 before:-z-10 before:opacity-0 before:scale-75 rounded-lg before:rounded-lg before:transition-all before:duration-150 before:bg-transparent hover:before:opacity-100 hover:before:scale-100 hover:before:transition-all hover:before:bg-neutral-200 dark:hover:before:bg-neutral-800/60 focus:before:bg-neutral-200 dark:focus:before:bg-neutral-800/60',
    filled &&
      'relative before:content-[""] before:absolute before:inset-0 before:-z-20 before:opacity-0 before:scale-75 rounded-lg before:rounded-lg before:transition-all before:duration-150 bg-neutral-200 dark:bg-neutral-800/60 hover:before:opacity-100 hover:before:scale-100 before:bg-neutral-200 dark:before:bg-neutral-800/60 hover:before:bg-neutral-300 dark:hover:before:bg-neutral-700/60 focus:before:bg-neutral-300 dark:focus:before:bg-neutral-700/60 backdrop-blur-sm',
    lg && 'p-2 -mx-2',
    xl && 'p-3 -mx-3',
    img &&
      'image-box relative before:content-[""] before:absolute before:inset-0 before:-z-10 before:opacity-0 before:scale-75 rounded-lg before:rounded-lg before:transition-all before:duration-150 before:bg-transparent hover:before:opacity-100 hover:before:scale-100 hover:before:transition-all hover:before:bg-neutral-200 dark:hover:before:bg-neutral-800/60 focus:before:bg-neutral-200 dark:focus:before:bg-neutral-800/60',
    !noUnderline &&
      'underline underline-offset-2 decoration-neutral-300 dark:decoration-neutral-700 hover:decoration-neutral-400 dark:hover:decoration-neutral-500',
    Astro.props.class
  )}
  {...props}><slot /></a
>
