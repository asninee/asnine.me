---
import { cn } from '@lib/utils'

const { href, lg, alternate, nav, noUnderline, label, ...props } = Astro.props

const isExternal = href.startsWith('http')
---

<a
  href={href}
  target={isExternal ? '_blank' : '_self'}
  aria-label={label}
  class={cn(
    'p-1 -mx-1',
    alternate && 'hover:opacity-45',
    nav && 'text-sec hover:text-black dark:hover:text-white py-0',
    lg && 'p-2 -mx-2',
    !noUnderline &&
      'underline underline-offset-2 decoration-bor hover:decoration-neutral-400 dark:hover:decoration-neutral-500',
    Astro.props.class
  )}
  {...props}><slot /></a
>
