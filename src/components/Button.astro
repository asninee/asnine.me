---
import { cn } from '@lib/utils'

const { sm, lg, xl, img, noUnderline, label, ...props } = Astro.props
---

<button
  type='button'
  aria-label={label}
  class={cn(
    'p-1 -mx-1 rounded-lg relative before:content-[""] before:absolute before:inset-0 before:-z-10 before:opacity-0 before:scale-75 before:rounded-lg before:transition-all before:duration-200 before:bg-transparent hover:before:opacity-100 hover:before:scale-100 hover:before:transition-all hover:before:bg-neutral-200 dark:hover:before:bg-neutral-800/60 focus:before:bg-neutral-200 dark:focus:before:bg-neutral-800/60',
    sm && 'p-0',
    lg && 'p-2 -mx-2',
    xl && 'p-3 -mx-3',
    Astro.props.class
  )}
  {...props}><slot /></button
>
