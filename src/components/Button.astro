---
import { twMerge } from 'tailwind-merge'

const { lg, xl, img, noUnderline, label, ...props } = Astro.props
---

<button
  type='button'
  aria-label={label}
  class={twMerge(
    'p-1 -mx-1 rounded-lg before:rounded-lg relative hover-before',
    lg && 'p-2 -mx-2',
    xl && 'p-3 -mx-3',
    Astro.props.class
  )}
  {...props}><slot /></button
>
