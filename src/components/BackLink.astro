---
import { Icon } from 'astro-icon/components'
import Link from './Link.astro'

const { href } = Astro.props

const destination = href === '/' ? 'home' : 'blog'
---

<Link
  lg
  href={href}
  noUnderline
  label={`Go back to ${destination} page`}
  class='relative group/back w-8 h-5 after:absolute after:inset-y-0 after:-right-[9.5px] md:after:-right-[15.5px] after:w-[0.5px] after:bg-gray-400 dark:after:bg-gray-600 flex items-center justify-center text-primary transition-opacity opacity-60 hover:opacity-100 focus-visible:opacity-100'
  ><Icon
    name='carbon:arrow-left'
    class='w-4 h-4 text-gray-700 transition-transform dark:text-gray-400 group-hover/back:-translate-x-1'
  />
</Link>
