---
import { Icon } from 'astro-icon/components'
import Link from './Link.astro'

const { href } = Astro.props

const destination = href === '/' ? 'home' : 'blog'
---

<Link
  lg
  href={href}
  noUnderline
  label={`Go back to ${destination} page`}
  class='relative group/back w-8 h-5 after:absolute after:inset-y-0 after:-right-1 after:w-[0.5px] after:bg-neutral-400 dark:after:bg-neutral-600 flex items-center transition-opacity opacity-60 hover:opacity-100 focus-visible:opacity-100'
  >
  <Icon name='fluent:arrow-left-28-regular' class='h-4 w-4 transition-transform group-hover/back:-translate-x-1' />
</Link>
