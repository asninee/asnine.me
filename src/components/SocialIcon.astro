---
import { getIcons } from '@/lib/icons'
import { Icon } from 'astro-icon/components'
import Link from './Link.astro'

const { name, link } = Astro.props

const icon = await getIcons().then(
  icons => icons.find(i => i.name === name)?.icon
)
---

<Link lg href={link} noUnderline label={`Open ${name} social link`}>
  <Icon name={icon} />
</Link>
