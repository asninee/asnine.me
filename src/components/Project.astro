---
import Link from './Link.astro'

const { link, repo, desc, year } = Astro.props
---

<Link
  xl
  href={link}
  class='flex flex-row gap-4 justify-between items-center'
  noUnderline
  label={`Open ${repo} project link`}
>
  <span class='text-gray-800 dark:text-gray-300 font-medium'>
    {repo}
    <span
      class='text-gray-500 dark:text-gray-400 font-normal hidden md:inline-block'
      >{desc}</span
    >
  </span>
  <div class='grow border-b border-gray-300 dark:border-gray-700'></div>
  <span class='text-gray-400 dark:text-gray-300'>{year}</span>
</Link>
