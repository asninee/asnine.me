---
import Link from './Link.astro'

const { url, name, desc, year } = Astro.props
---

<Link
  lg
  href={url}
  class='flex items-center justify-between gap-3 transition-all duration-300 hover:opacity-45'
  noUnderline
  label={`Open ${name} project url`}
>
  <span class='font-medium'>{name}</span>
  <span class='text-sec -ml-2 hidden sm:flex'>{desc}</span>
  <div class='border-bor grow border-b border-dotted'></div>
  <time class='text-sec text-xs'>{year}</time>
</Link>
