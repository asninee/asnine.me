---
import { formatDate } from '@lib/date'
import Link from './Link.astro'

const { slug, title, desc, date } = Astro.props

const isHome = Astro.url.pathname === '/'
---

<Link
  lg
  href={`/blog/${slug}`}
  class='flex flex-row items-center justify-between gap-4 transition-all duration-300 hover:opacity-45'
  noUnderline
  label={`Open ${title} blog post`}
>
  <span class='font-medium'>
    {title}
    <span class='text-sec hidden font-normal sm:flex'>
      {desc}
    </span>
  </span>

  <time class='text-sec text-xs'>{formatDate(date, isHome)}</time>
</Link>
