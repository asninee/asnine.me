---
import { getNotes } from '@lib/notes'
import { cn } from '@lib/utils'
import { render } from 'astro:content'
import Link from './Link.astro'

const isHome = Astro.url.pathname === '/'
const notes = await getNotes(isHome)
const dates = Object.keys(notes)

const { class: className, ...props } = Astro.props

export const components = {
  a: Link,
}
---

<div class={cn(Astro.props.class)} {...props}>
  {
    dates.map(d => (
      <section class='mt-4 flex items-start gap-6 md:mt-6 md:gap-8 [&:first-of-type]:mt-0 [&:not(:last-of-type)]:border-b [&:not(:last-of-type)]:border-dotted [&:not(:last-of-type)]:border-bor'>
        <small class='mt-0.5 text-sec'>{d}</small>
        <ul class='mb-4 md:mb-6'>
          {notes[d].map(n =>
            render(n).then(({ Content }) => (
              <li class='list-none'>
                <ul class='md [&:not(:last-of-type)]:mb-4 [&:not(:last-of-type)]:border-b [&:not(:last-of-type)]:border-dotted [&:not(:last-of-type)]:border-bor [&:not(:last-of-type)]:pb-4 [&:not(:last-of-type)]:md:mb-6 [&:not(:last-of-type)]:md:pb-6'>
                  <li class='flex list-none flex-col gap-4'>
                    <Content components={components} />
                  </li>
                </ul>
              </li>
            ))
          )}
        </ul>
      </section>
    ))
  }
</div>
